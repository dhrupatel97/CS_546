<div class="container">
  <div class="row">
    <div id="carousel-id" class="carousel slide col-md-8" data-ride="carousel">

      <div class="container carousel-inner" role="listbox">
        <div class="carousel-item active">
          <img src="/img/s1.jpg" alt="First slide" class="img-fluid">
        </div>
        <div class="carousel-item">
          <img src="/img/s2.jpg" alt="Second slide" class="img-fluid">
        </div>
        <div class="carousel-item">
          <img src="/img/s3.jpg" alt="Third slide" class="img-fluid">
        </div>
      </div>

      <ol class="carousel-indicators">
        <li data-target="#carousel-" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
      </ol>
      <!-- /.text-center -->
    </div>
    <div class=" search col-md-4">
        <div class= 'col-sm-12'>
          <div class="card card-body">
            <h1 class="text-center">Search For Trip</h1>
            <br>
            <form method='post' action='/trips' >
              <div class="form-group">
                <label for="search">Search</label>
                <input type="text" placeholder='e.g London' name="search" id='search' class="form-control" required>
              </div>
              <div class="form-group">
                <label for="date">Pick a date</label>
                <input type="date" name="date" id='date' class="form-control" >
              </div>
              <button type="submit" class="button">GO</button>
            </form>
            {{#if error}}
            <p class='error'>{{this.error}}</p>
            {{/if}}
          </div>
        </div>
    </div>
  </div>
  <!-- Each carousel needs a unique ID -->

  <!-- /.carousel -->

</div>